{
    "files.exclude": {
        "**/*.js": { "when": "$(basename).ts" },
        "**/*.map": { "when": "$(basename).map" },
        "npm-debug.log": true,
        "node_modules": true,
        ".coverage": true,
        ".testresults": true,
        "coverage": true,
        "testresults": true,
        "**/*.tgz*": true,
        ".nyc_output": true
    },
    "eslint.options": {
        "configFile": "./.eslintrc.js",
        "ignorePath": "./.eslintignore",
        "useEslintrc": false
    }
} 
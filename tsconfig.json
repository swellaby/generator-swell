{
    "compilerOptions": {
        "target": "eS6",
        "lib": [
            "dom",
            "es2015.promise",
            "es6"
        ],
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "importHelpers": true,
        "sourceMap": true
    },
    "include": [
        "generators/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "generators/app/templates/**/*.ts"
    ]
}

